<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f4f4f4, #e0e0e0);
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            overflow: hidden; /* Hide overflow to enhance animation effects */
            animation: fadeIn 2s ease-out; /* Fade-in animation for the whole page */
        }

        h1 {
            font-size: 2rem;
            color: #333;
            margin-bottom: 20px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
            opacity: 0;
            transform: translateY(-20px);
            animation: slideIn 1.5s ease-out 0.5s forwards; /* Slide-in animation for the heading */
        }

        table {
            width: 90%;
            max-width: 900px;
            border-collapse: separate;
            border-spacing: 0;
            background-color: #fff;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            overflow: hidden;
            transform: scale(0.95); /* Slight scaling effect */
            opacity: 0;
            animation: tableFadeIn 2s ease-out 1s forwards; /* Table fade-in animation */
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes tableFadeIn {
            from {
                opacity: 0;
                transform: scale(0.95);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        th, td {
            padding: 16px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition */
        }

        th {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: #fff;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px; /* Letter spacing for headers */
        }

        td {
            background-color: #f9f9f9;
        }

        tr:nth-child(odd) td {
            background-color: #fafafa; /* Alternating row colors */
        }

        tr:hover td {
            background-color: #f1f1f1;
            color: #333; /* Change text color on row hover */
        }

        tbody tr:last-child td {
            border-bottom: none;
        }
    </style>
</head>
<body>
    <h1>Todo List</h1>
    <div>
        <table>
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Mobile No</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user) { %>
                    <tr>
                         <td><%= user.username %></td>  
                         <td><%= user.email %></td>  
                         <td><%= user.mobileNo %></td>  
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
